{
  // VS Code tasks for setting up the dev environment and running the app
  "$schema": "vscode://schemas/tasks",
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Setup dev env (.venv + requirements-dev)",
      "type": "shell",
      "command": "python -m venv .venv; & ./.venv/Scripts/python.exe -m pip install --upgrade pip; & ./.venv/Scripts/python.exe -m pip install -r requirements-dev.txt",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Install runtime requirements",
      "type": "shell",
      "command": "& ./.venv/Scripts/python.exe -m pip install -r requirements.txt",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "Run NoteBook",
      "type": "shell",
      "command": "& ./.venv/Scripts/python.exe ./main.py",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }
  ]
}
